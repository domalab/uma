<?php
$sName = "omniraid";
$omniraid_cfg = parse_plugin_cfg("omniraid");
$omniraid_service = isset($omniraid_cfg['SERVICE']) ? $omniraid_cfg['SERVICE'] 	: "disable";
$omniraid_ups = isset($omniraid_cfg['UPS']) ? $omniraid_cfg['UPS'] 	: "enable";
$omniraid_running = shell_exec("pidof omniraid | wc -w");
$omniraid_version = shell_exec("cat /usr/local/emhttp/plugins/omniraid/VERSION | tr '\n' ' '");
?>

<script type="text/javascript">
	var isRunning = <?=$omniraid_running;?> === 1;
	var version = '<?=$omniraid_version;?>';
	var color = isRunning ? 'color:green' : 'color:orange'
	if (isRunning) {
		document.write("<span style='color:green;'><b>OmniRaid " + version + "</b></span> <br /> <br />");
		document.write("<p>HTTP API available on port 34600</p>");
	} else {
		document.write("<b><font style='color:orange;'>OmniRaid " + version + " (not running)</font></b>")
	}
</script>

<form markdown="1" name="omniraid_settings" method="POST" action="/update.php" target="progressFrame">
<input type="hidden" name="#file" value="omniraid/omniraid.cfg" />
<input type="hidden" id="command" name="#command" value="" />

Enable OmniRaid plugin :
: <select id="SERVICE" name="SERVICE" size="1" onChange="checkRUNNING(this.form);">
  <?=mk_option($omniraid_service, "disable", "No");?>
  <?=mk_option($omniraid_service, "enable", "Yes");?>
  </select>

Provide UPS status :
: <select id="UPS" name="UPS" size="1" onChange="checkRUNNING(this.form);">
  <?=mk_option($omniraid_ups, "enable", "Yes");?>
  <?=mk_option($omniraid_ups, "disable", "No");?>
  </select>

<input id="DEFAULT" class="stopped" type="submit" value="Default" onClick="resetDATA(this.form)">
: <input id="btnApply" type="submit" value="Apply" onClick="verifyDATA(this.form)"><input type="button" value="Done" onClick="done()">
</form>

<script type="text/javascript">
$(function(){
	showStatus('<?=$sName;?>');
	checkRUNNING(document.omniraid_settings);
});

function isNumber(value) {
   return typeof value === 'number' && isFinite(value);
}

function resetDATA(form) {
	form.UPS.value = "enable"
}

function checkRUNNING(form) {
	if (<?=$omniraid_running;?> == 1)
	{
		$(".stopped").prop("disabled", true);
		form.btnApply.disabled = "disabled";
   }
   else
	$(".stopped").prop("disabled", (form.SERVICE.value == "enable"));
	if (form.SERVICE.value == "enable")
		form.command.value = "/usr/local/emhttp/plugins/omniraid/scripts/start";
	else {
		form.command.value = "/usr/local/emhttp/plugins/omniraid/scripts/stop";
		form.btnApply.disabled = (form.SERVICE.value == "enable");
	}
}

function verifyDATA(form) {
	form.SERVICE.value = form.SERVICE.value.replace(/ /g,"_");
	form.UPS.value = form.UPS.value.replace(/ /g,"_");
}
</script>
